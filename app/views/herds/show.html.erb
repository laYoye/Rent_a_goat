
<div class="container">

  <div class="card-show">
      <%= cl_image_tag @herd.photo.key, height: 300, width: 400, crop: :fill %>
      <div class="card-show-infos">
        <h2><%= @herd.name %></h2>
        <p><i>"<%= @herd.about %>"</i></p>
        <p> Ce troupeau est constitué de <b><%= @herd.goat_number %></b> chèvre(s) </p>
        <br>
        <br>
        <a> <%= link_to "Réservez ce troupeau", new_herd_booking_path(params[:id]), :class => "btn-cta" %> </a>
      </div>


  </div>

  <a class="btn" href="/herds">Retour vers la liste</a>

</div>




